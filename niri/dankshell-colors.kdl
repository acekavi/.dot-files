layout {
    background-color "transparent"

    focus-ring {
        active-color   "#f9b1db"
        inactive-color "#9c8d93"
        urgent-color   "#ffb4ab"
    }

    border {
        active-color   "#f9b1db"
        inactive-color "#9c8d93"
        urgent-color   "#ffb4ab"
    }

    shadow {
        color "#00000070"
    }

    tab-indicator {
        active-color   "#f9b1db"
        inactive-color "#9c8d93"
        urgent-color   "#ffb4ab"
    }

    insert-hint {
        color "#f9b1db80"
    }
}