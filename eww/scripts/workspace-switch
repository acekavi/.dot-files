#!/bin/bash

# Switch to workspace on Hyprland
workspace="$1"

if [ -z "$workspace" ]; then
    echo "Usage: $0 <workspace_number>"
    exit 1
fi

# Check if Hyprland is running
if ! pgrep -x "Hyprland" > /dev/null; then
    echo "Hyprland is not running"
    exit 1
fi

# Switch to the workspace
hyprctl dispatch workspace "$workspace" 2>/dev/null
