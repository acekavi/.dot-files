        },
        {
            "type": "os",
            "key": " \uf17c OS",
            "keyColor": "blue"
        },
        {
            "type": "host",
            "key": " \uf109 Host",
            "keyColor": "green"
        },
        {
            "type": "kernel",
            "key": " \uf30d Kernel",
