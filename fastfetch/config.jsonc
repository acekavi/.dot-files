    // #######################################################################################
    
    "$schema": "https://github.com/fastfetch-cli/fastfetch/raw/dev/doc/json_schema.json",
    
    "logo": {
        "source": "auto",
        "padding": {
            "top": 1,
            "left": 4,
            "right": 4
        },
        "color": {
            "1": "magenta",
            "2": "blue"
        }
    },
    
    "display": {
        "separator": " \u2192 ",
        "color": {
            "separator": "cyan",
            "keys": "magenta",
            "title": "magenta"
        }
    },
    
    "modules": [
        {
            "type": "title",
            "color": {
                "user": "cyan",
                "at": "white",
                "host": "magenta"
